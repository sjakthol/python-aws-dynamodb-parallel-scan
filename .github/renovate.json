{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "on sunday"
  ],
  "packageRules": [
    {
      "groupName": "non-development dependencies",
      "matchDepTypes": [
        "dependencies"
      ]
    },
    {
      "groupName": "development dependencies",
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
